<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/cvMascotaPerfil"
    card_view:cardCornerRadius="@dimen/cvradio"
    card_view:cardElevation="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/cvpadding">
        <ImageView
            android:id="@+id/imgFotoPerfilcv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cvsizecardPerfil"
            android:src="@drawable/perro3"
            android:background="@drawable/borde"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorDivisor"
        android:gravity="center">
        <TextView
            android:id="@+id/tvRaitingPerfilcv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/raitingMascota"
            android:layout_gravity="center"
            android:fontFamily="cursive"
            android:textSize="@dimen/cvtexto"
            android:textColor="@color/colorTextoSecundario"/>

        <ImageView
            android:id="@+id/imghuesoAmarilloPerfilcv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/rsz_dog_bone_yellow_100"
            />


    </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>